<h1>Create a New Review for <%= @restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content, label: "Review Content" %>
  <%= f.input :rating, label: "Rating", collection: 0..5 %>
   <%= f.submit %>
<% end %>

<%= link_to "Back", restaurant_path(@restaurant) %>
