<div class="container mt-4">
  <h1>Edit <%= @restaurant.name %></h1>

  <%= simple_form_for @restaurant, html: { class: 'form' } do |f| %>
    <div class="mb-3">
      <%= f.input :name, label: 'Restaurant Name', input_html: { class: 'form-control' } %>
    </div>
    <div class="mb-3">
      <%= f.input :address, label: 'Address', input_html: { class: 'form-control' } %>
    </div>
    <div class="mb-3">
      <%= f.input :category, label: 'Category', collection: ['chinese', 'italian', 'japanese', 'french', 'belgian'], input_html: { class: 'form-select' } %>
    </div>
    <button type="submit" class="btn btn-primary">Update Restaurant</button>
  <% end %>

  <%= link_to 'Back to Restaurant', restaurant_path(@restaurant), class: 'btn btn-secondary mt-2' %>
</div>
