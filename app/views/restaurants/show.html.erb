<div class="container mt-4">
  <h1><%= @restaurant.name %></h1>

  <p><strong>Address:</strong> <%= @restaurant.address %></p>
  <p><strong>Category:</strong> <%= @restaurant.category %></p>

  <div class="mb-3">
    <%= link_to "Edit", edit_restaurant_path(@restaurant), class: "btn btn-warning me-2" %>
    <%= link_to "Back", restaurants_path, class: "btn btn-secondary me-2" %>
    <%= link_to "Post a Review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
  </div>

  <div>
    <h3>Reviews</h3>
    <ul class="list-group">
      <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= review.content %>
          <%= link_to "Delete", review_path(review), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
